# ChatBT Production Environment Configuration

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
WEBSOCKET_SECRET=your-websocket-secret-key-change-this

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_TESTING=False

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/chatbt
# For MySQL: DATABASE_URL=mysql://user:password@localhost/chatbt

# API Configuration
API_BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com
PORT=5000

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
# For Redis Cloud: REDIS_URL=redis://username:password@host:port

# Caching Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# WebSocket Configuration
WEBSOCKET_ASYNC_MODE=threading

# Performance
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=20
SQLALCHEMY_POOL_RECYCLE=3600

# Monitoring
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-domain.com

